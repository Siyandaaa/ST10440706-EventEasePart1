@model EventEase.Models.BookingViewModel

@{
    ViewData["Title"] = "Booking";
}
<h1>Booking</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Bookings" asp-action="Index" method="get">
    <p>
        <select asp-for="BookingDates" asp-items="Model.Dates">
            <option value="">All</option>
        </select>
        <label>Name <input type="text" asp-for="searchString" /></label>
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bookings![0].BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings![0].Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings![0].Venue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bookings!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.VenueName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>